{
    "root": true,
    "extends": "@thetribe/eslint-config-react-typescript",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "env": {
        "browser": true
    },
    "overrides": [
        {
            "files": ["**/*.test.{ts,tsx}"],
            "env": {
                "jest": true
            }
        }
    ],
    "rules": {
        "react/react-in-jsx-scope": "off" // Not necessary in React 17
    }
}
